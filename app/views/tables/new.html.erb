<h1> New Inventory Management Template!</h1>

<div id="input">Add More</div>

<%= form_for @table do |f|%>
<div id="content">
  <div id="base">
    <%= f.label :product %>
    <%= f.text_field :product %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :qty %>
    <%= f.number_field :qty %>

    <%= f.label :price %>
    <%= f.number_field :price, step:"any" %>

    <%= f.label :total_price %>
    <%= f.number_field :total_price %>
  </div>

  </div>




<%= f.submit %><br>
<%= link_to "Go Back", tables_path %>
<%= link_to "Main Menu", root_path %>



<% end %>


